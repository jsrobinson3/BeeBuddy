{
  "expo": {
    "name": "BeeBuddy",
    "slug": "beebuddy",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "beebuddy",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#fdbc48"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.beebuddyai.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "BeeBuddy uses your location to set apiary coordinates and provide local weather-based task recommendations.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#3f4a30"
      },
      "package": "com.beebuddyai.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-font",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "BeeBuddy uses your location to set apiary coordinates and provide local weather-based task recommendations."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "BeeBuddy needs access to your photos to attach them to hive inspections.",
          "cameraPermission": "BeeBuddy needs camera access to photograph your hives during inspections."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "856e7359-1e8c-4592-b24e-28ce0a2de05b"
      }
    }
  }
}
